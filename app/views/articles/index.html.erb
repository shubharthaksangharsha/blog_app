<% provide(:title, "All Articles") %>
<h1>Articles</h1>
<h2>The Blog has <%= Article.public_count %> articles and counting!</h2>
<ul>
  <% @articles.each do |article| %>
  <% unless article.archived? %>
    <li>
      <%= link_to article.title, article %> by 
      <%= article.user.email %>
    </li>
    <% end %>
  <% end %>
</ul>

<% if user_signed_in? %>
	<%= link_to "Show Archived Articles", articles_get_archived_posts_path %>
<% end %>