<h1><%= @article.title %></h1>
<p><%= @article.body %></p>


<h2>Comments</h2>
<%= render @article.comments%>


<h2>Add a comment: </h2>
<%= render 'comments/form' %>
<%= button_to "Home", root_path, method: :get %>
<%= button_to "Edit", edit_article_path(@article), method: :get %>
<%= button_to "Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure you want to reset the indexes?" } %>
